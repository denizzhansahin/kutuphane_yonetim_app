<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KitapIDTakip">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/kitap_id_bul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kitap ID Bilgisini Yazınız"
            android:inputType="text" />

        <Button
            android:id="@+id/islem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitap Bilgi Bul" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap İsmi"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kitap_isim1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null-text"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap Yayınevi"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kitap_yayinevi1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null-text"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap Sayfa Sayısı"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kitap_sayfa_sayi1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null-text"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap Yazarı"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kitap_yazar_sayi1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null-text"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap Teslim Bilgisi"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kitap_teslim_bilgi1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null-text"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap Teslim Alan Kişi İsim"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kitap_teslim_kisi_bilgi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null-text"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap Teslim Alan Kişi Telefon"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kitap_teslim_kisi_bilgi_telefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null-text"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kitap Teslim Alma Tarihi"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kitap_teslim_alma_tarih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="null-text"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>